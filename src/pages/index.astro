---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/home/HeroHomeSection.astro';
import DedicatedSection from '../components/home/DedicatedSection.astro';
import ActivitiesSection from '../components/home/ActivitiesSection.astro';
import PlatformSection from '../components/home/PlatformSection.astro';
import TeamSection from '../components/home/TeamSection.astro';
import ReachOutSection from '../components/home/ReachOutSection.astro';
---

<Layout title="Kinetic-Community.">
	<HeroSection/>
	<DedicatedSection/>
	<ActivitiesSection/>
	<PlatformSection/>
	<TeamSection/>
	<ReachOutSection/>
</Layout>


<script>
	window.onscroll=function(){scrollCheck()}
	function scrollCheck(){
	  if (document.body.scrollTop>20 ||document.documentElement.scrollTop>20){
		document.querySelector('nav').classList.remove('bg-transparent')
		document.querySelector('nav').classList.add('bg-purple-800')
	  }else(
		document.querySelector('nav').classList.remove('bg-purple-800')
	  )
	}
	
  </script>
  